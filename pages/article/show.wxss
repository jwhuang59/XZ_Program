/* pages/article/show.wxss */
@import "../../wxParse/wxParse.wxss";

.detail_page{
  padding: 10px;
  background: #fff;
  margin-top:10px;
  margin-bottom:10px;
}
.detail_title{
  text-align: center;
  padding: 10px 15px;
  line-height: 24px;
  font-size: 18px;
}
.detail_page .date_hits {
    border-bottom: 1px solid #009688;
    line-height: 20px;
}
.detail_page .date_hits text {
    display: inline-block;
    width: 50%;
    text-align: center;
    font-size: 12px;
    color: #666;
    line-height: 20px;
    font-style: oblique;
}
