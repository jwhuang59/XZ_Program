/* pages/article/list.wxss */

.category_list_title {
  height: 40px;
  margin-top: 10px;
  text-align: center;
}

.category_list_title text {
  font-size: 16px;
  padding: 0 15px;
  line-height: 30px;
  margin-top: 5px;
  border-bottom: 1px solid #009688;
  display: inline-block;
}

.article_list_container .article_list {
  background: #fff;
  padding: 10px 10px 10px 120px;
  height: 66px;
  margin-top: 10px;
  position: relative;
}


.article_list_container .article_list .pic {
  position: absolute;
  left: 10px;
  top: 10px;
  width: 100px;
  height: 66px;
  line-height: 66px;
  overflow: hidden;
}

.article_list_container .article_list .title {
  max-width: 95%;
  margin-right: 10px;
  overflow: hidden;
  text-overflow: clip;
  white-space: normal;
  font-size: 14px;
  line-height: 20px;
  height: 40px;
}

.article_list_container .article_list text {
  padding-right: 10px;
  height: 18px;
  line-height: 18px;
}

.article_list_container .article_list .category_name {
  color: #009688;
}

.article_list_container .article_list .date_hits {
  position: relative;
  line-height: 18px;
  font-size: 12px;
  color: #666;
  margin-top: 5px;
}
.article_list_container .article_list .date_hits .hits {
  position: absolute;
  right: 0px;
  top: 0;
  padding-left: 20px;
}

