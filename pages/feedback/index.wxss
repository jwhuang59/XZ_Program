/* pages/feedback/index.wxss */
.category_list_title {
  height: 40px;
  margin-top: 10px;
  text-align: center;
}

.category_list_title text {
  font-size: 16px;
  padding: 0 15px;
  line-height: 30px;
  margin-top: 5px;
  border-bottom: 1px solid #009688;
  display: inline-block;
}
.feedback_container{
  background: #fff;
  padding:10px;
  margin-top:10px
}
.feedback_container textarea{
  border:1px solid #d2d2d2;
  padding:2.5%;
  line-height: 24px;
  width:95%;
}
.feedback_container button{
  margin-top:10px;
  width:100%;
}

.feedback_list_container{background: #fff;margin-top: 10px;padding:10px;}
.feedback_list_container .li {
    position: relative;
    padding: 20px 0 10px;
    border-bottom: 1px dotted #DFDFDF;
}
.feedback_list_container .feedback_member{position: relative;}
.feedback_list_container .feedback_member .avatar{width:46px;height: 46px;line-height: 46px;border-radius: 2px;background: #eee;text-align: center;position: absolute;left:0;top:0;}
.feedback_list_container .feedback_member .avatar .layui-icon{font-size:30px;color:#aaa;}
.feedback_list_container .feedback_member .avatar image{max-width: 46px;max-height: 46px;vertical-align: middle;display: inline-block;border-radius: 2px;} 
.feedback_list_container .feedback_member .name_date{padding-left: 56px;}
.feedback_list_container .feedback_member .name_date .name{font-size: 14px;line-height: 20px;color:#4f99cf;display: inline-block;padding-right: 10px}
.feedback_list_container .feedback_member .name_date .date{color:#999;margin-right: 10px;display: inline-block;font-size: 12px;line-height: 20px;}
.feedback_list_container .feedback_content{clear:both;padding: 0px 0 10px 56px;min-height: 0;line-height: 24px;font-size: 12px;min-height: 48px;word-break:break-all;}
